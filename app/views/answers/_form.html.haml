.col-lg-2
.col-lg-8
  = form_for([@question, @answer]) do |f|
    - if @answer.errors.any?
      #error_explanation
        %h2
          = pluralize(@answer.errors.count, "error")
          prohibited this post from being saved:
        %ul
          - @answer.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :Answer
      %br/
      = f.text_area :answer, :placeholder => 'Enter your answer', :class =>"form-control", :rows => "8"



      = hidden_field_tag :test_date, "#{request.remote_ip}"
    .actions
      = f.submit "Create Answer", :class => " btn btn-primary btn-xs"

.col-lg-2
