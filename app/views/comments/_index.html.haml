.answer-comment
  - question.comments.each do |comment|


    %span= comment.comment
    %span.fullname= "- #{comment.user.full_name}"
    - if current_user == comment.user
      %span.fullname= link_to 'Edit', edit_question_comment_path(path1(comment, question))
      - unless comment.check_history?
        %span.fullname= link_to 'Edited', comments_comment_history_path(history_id: comment.history_id, dont_show: comment.id)


      %span.fullname= link_to 'Destroy', question_comment_path(path1(comment, question)), method: :delete, data: { confirm: 'Are you sure?' }
    %br/
    %br/
