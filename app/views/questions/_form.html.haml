.col-lg-2
.col-lg-8
  = form_for(@question) do |f|
    - if @question.errors.any?
      #error_explanation
        %h2
          = pluralize(@question.errors.count, "error")
          prohibited this post from being saved:
        %ul
          - @question.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :Questions
      %br/
      = f.text_area :question_box, :placeholder => 'Enter your question', :class =>"form-control", :rows => "8"




    .actions
      = f.submit"Create Question",:class => " btn btn-primary btn-xs"

      = link_to 'Back', questions_path


.col-lg-2
